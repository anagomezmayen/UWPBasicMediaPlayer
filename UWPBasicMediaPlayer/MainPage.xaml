<Page
    x:Class="UWPBasicMediaPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPBasicMediaPlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:model="using:UWPBasicMediaPlayer.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <RelativePanel>
            <Button Name="HamburgerButton"
                RelativePanel.AlignLeftWithPanel="True"
                FontFamily="Segoe MDL2 Assets"
                Content="&#xE700;" Height ="50" Width="50" Click="HamburgerButton_Click" />
            <Button Name="BackButton"
                RelativePanel.RightOf="HamburgerButton"
                FontFamily="Segoe MDL2 Assets"
                Content="&#xE0A6;" Height ="50" Width="50" Click="BackButton_Click" />
            <Button Name="PreviousButton"
                RelativePanel.RightOf="BackButton"
                FontFamily="Segoe MDL2 Assets"
                Content="&#xE892;" Height ="50" Width="50" Click="PreviousButton_Click_1" />
            <Button Name="PauseButton"
                RelativePanel.RightOf="PreviousButton"
                FontFamily="Segoe MDL2 Assets"
                Content="&#xEDB4;" Height ="50" Width="50" Click="PauseButton_Click" />
            <Button Name="PlayButton"
                RelativePanel.RightOf="PauseButton"
                FontFamily="Segoe MDL2 Assets"
                Content="&#xE768;" Height ="50" Width="50" Click="PlayButton_Click" />
            <Button Name="ForwardButton"
                RelativePanel.RightOf="PlayButton"
                FontFamily="Segoe MDL2 Assets"
                Content="&#xE893;" Height ="50" Width="50" Click="ForwardButton_Click" />

        </RelativePanel>
        <SplitView Grid.Row="1"  Name="MySplitView"
                     DisplayMode="CompactOverlay"
                     CompactPaneLength="50"
                     OpenPaneLength="200"
                       >
            <!--<SplitView.Pane>
                <ListView Name="FeaturesListView" IsItemClickEnabled="True"
                              ItemsSource="{x:Bind Features}" ItemClick="FeaturesListView_ItemClick">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:Features">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{x:Bind FeatureIconFile}" Height="35" Width="35" Margin="-8,10,0,10" />
                                <TextBlock Text="{x:Bind Category}" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SplitView.Pane>
        </SplitView>-->

            <SplitView.Content>
                <Grid Margin="20,20,0,0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <MediaElement Name="MyMediaElement" AutoPlay="True" />
                    <TextBlock Name="CategoryTextBlock" Text="All Songs" FontSize="24" />
                    <GridView Grid.Row="1" 
                                  Name="SongGridView" 
                                  IsItemClickEnabled="True"
                                  ItemsSource="{x:Bind Songs}"
                                  ItemClick="SongGridView_ItemClick"                   
                                  >
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="model:Song">
                                <StackPanel Orientation="Vertical">
                                    <Image Name="MyImage" Height="112" Width="101" Source="Assets/Images/songGeneral.png"/>
                                    <TextBlock Text="{x:Bind Title}" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </SplitView.Content>
        </SplitView>
        </Grid>
</Page>


